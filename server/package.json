{
  "name": "clarity-council-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:ts && npm run copy-schemas",
    "build:ts": "tsc",
    "build:utils": "tsc --pretty",
    "copy-schemas": "node scripts/copy-schemas.cjs",
    "start": "npm run build && node dist/index.js",
    "start:https": "npm run build && node dist/https-server.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.17.1",
    "chokidar": "^3.6.0",
    "pino": "^10.3.0",
    "uuid": "^9.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
