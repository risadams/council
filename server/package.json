{
  "name": "clarity-council-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-schemas",
    "copy-schemas": "mkdir -p dist/schemas && cp -R src/schemas/* dist/schemas/",
    "start": "npm run build && node dist/index.js",
    "start:https": "npm run build && node dist/https-server.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "ajv": "^8.12.0",
    "pino": "^9.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
