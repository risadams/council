{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
