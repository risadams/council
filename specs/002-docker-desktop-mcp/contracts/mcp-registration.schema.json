{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Service Registration Request",
  "description": "Request to register a Clarity Council service with Docker Desktop MCP Toolkit",
  "type": "object",
  "required": [
    "serviceId",
    "name",
    "version",
    "description",
    "endpoint",
    "tools",
    "healthCheckUrl"
  ],
  "properties": {
    "serviceId": {
      "type": "string",
      "description": "Unique identifier for the service",
      "pattern": "^clarity-council-docker-[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name in Docker Desktop",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the service",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string",
      "description": "One-line description for Docker Desktop UI",
      "minLength": 1,
      "maxLength": 200
    },
    "endpoint": {
      "type": "object",
      "required": ["protocol", "host", "port"],
      "properties": {
        "protocol": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "host": {
          "type": "string",
          "description": "Hostname or IP address"
        },
        "port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535
        },
        "basePath": {
          "type": "string",
          "default": "/"
        }
      }
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "MCP tool name"
          },
          "description": {
            "type": "string",
            "description": "What the tool does"
          },
          "inputSchema": {
            "type": "object",
            "description": "JSON Schema for tool input"
          },
          "outputSchema": {
            "type": "object",
            "description": "JSON Schema for tool output"
          }
        }
      }
    },
    "healthCheckUrl": {
      "type": "string",
      "format": "uri",
      "description": "GET endpoint for service health status"
    },
    "registrationTimestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When service was registered"
    }
  }
}
